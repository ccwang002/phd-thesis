{
    "editor.minimap.maxColumn": 100,
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-lualatex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        }
    ],
    "editor.wordWrap": "bounded",
    "latex-workshop.intellisense.citation.backend": "biblatex"
}
